<div>
  <h1> <%= @task.title %> </h1> 
  <%= link_to 'Edit', edit_task_path(@task.id) %>
</div>
<p> <%= @task.details %> </p>
<% if @task.completed %>
<p><input type="checkbox" <%= 'checked' if @task.completed %>> This task is completed</p>
<% else %>
<p><input type="checkbox" <%= 'checked' if @task.completed %>> This task is not completed yet</p>
<% end %>

<%= link_to "Back to list", tasks_path %>